<% title = t "head.title.db.people.index" %>
<% set_meta_tags(title: title, reverse: true, prefix: false) %>

<div class="container py-3">
  <div class="align-items-center row">
    <div class="col">
      <h1>
        <%= title %>
      </h1>
    </div>

    <div class="col-auto">
      <% if policy(Person).create? %>
        <div class="text-end">
          <%= link_to db_new_person_path, class: "btn btn-outline-primary" do %>
            <%= icon "plus" %>
            <%= t "resources._common.new" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-body">
      <%= render "person_list", resources: @people %>
    </div>
  </div>

  <div class="mt-3 text-center">
    <%= Deprecated::ButtonGroups::PaginationButtonGroupComponent.new(self, collection: @people).render %>
  </div>
</div>
